<h1>Create an article</h1>

<%= form_for @article, html: {class: "nifty_form"} do |f| %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, size: "60x12" %>
  </p>
  <%= f.submit "Create" %>
<% end %>