<h1 class="text-center my-4">Log in to Alpha Blog</h1>

<div class="mx-auto mt-4 col-5">
  <div class=" mx-auto">
    <%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login_path) do |f| %>
      <div class="form-group">
        <div class="">
          <%= f.email_field :email, class: "form-control shadow p-3 bg-white rounded border-0", placeholder: :email %>
        </div>
      </div>
      <div class="form-group">
        <div class="">
          <%= f.password_field :password, class: "form-control shadow p-3 bg-white rounded border-0", placeholder: :password, autocomplete: "off" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2">
          <%= f.submit "Log in", class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
    <% end %>
  </div>
</div>