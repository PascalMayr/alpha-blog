<% if @user.errors.any? %>
  <%= render 'shared/errors', obj: @user %>
<% end %>
<div class="mx-auto mt-4 col-5">
  <div class=" mx-auto">
    <%= form_for @user, html: {class: "form-horizontal"} do |f| %>
      <div class="form-group">
        <div >
          <%= f.text_field :username, class: "form-control shadow p-3 bg-white rounded border-0", placeholder: :username%>
        </div>
      </div>
      <div class="form-group">
        <div class="">
          <%= f.email_field :email, class: "form-control shadow p-3 bg-white rounded border-0", placeholder: :email %>
        </div>
      </div>
      <div class="form-group">
        <div class="">
          <%= f.password_field :password, class: "form-control shadow p-3 bg-white rounded border-0", placeholder: :password %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2">
        <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-primary btn-lg") %>
        </div>
      </div>
    <% end %>
  </div>
</div>